            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                               FontWeight="{StaticResource PageTitleFontWeight}"
                               FontSize="{StaticResource PageTitleFontSize}"
                               />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="PivotItem">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </Setter.Value>
